---
const { content } = Astro.props;

const url = "https://api.jhustynn.my.id/";
---

<section class="bg-white dark:bg-gray-900" transition:animate="fade">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="grid gap-8 lg:grid-cols-2">
      {
        content.map(({ slug, foto, judul, tanggal, email, keterangan, nama_kategori }) => (
          <article class="p-6 h-fit bg-white rounded-lg border border-green-200 shadow-md dark:bg-gray-800 dark:border-gray-700 lg:hover:-translate-y-5 transition-all">
            <a href={"blog/" + slug}>
              <img class="rounded-lg" src={url + "assets/images/konten/" + foto} alt="" />
            </a>
            <div class="flex justify-between items-center mb-5 text-gray-500">
              <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 mt-4 rounded dark:bg-primary-200 dark:text-primary-800">
                <a href="">#{nama_kategori}</a>
              </span>
              <span class="text-sm">{tanggal}</span>
            </div>
            <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
              <a href="#">{judul}</a>
            </h2>
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-4">
                <img class="w-7 h-7 rounded-full" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/jese-leos.png" alt="Jese Leos avatar" />
                <span class="font-medium dark:text-white"> {email}</span>
              </div>
              <a href={"blog/" + slug} class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline">
                Read more
                <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
<div id="pagination" class="mb-8 mx-auto">
  <div class="flex w-full justify-center gap-2">
    <div class="w-12 h-12 text-lg text-gray-200 hover:text-gray-200 text-center font-bold flex items-center justify-center bg-gray-400 dark:bg-gray-800 rounded-full dark:hover:bg-gray-800 cursor-pointer">1</div>
    <div class="w-12 h-12 text-lg text-gray-700 hover:text-gray-200 text-center font-bold flex items-center justify-center bg-blue-300 rounded-full hover:bg-gray-400 dark:hover:bg-gray-800 cursor-pointer">2</div>
    <div class="w-12 h-12 text-lg text-gray-700 hover:text-gray-200 text-center font-bold flex items-center justify-center bg-blue-300 rounded-full hover:bg-gray-400 dark:hover:bg-gray-800 cursor-pointer">3</div>
    <div class="w-12 h-12 text-lg text-gray-700 hover:text-gray-200 text-center font-bold flex items-center justify-center bg-blue-300 rounded-full hover:bg-gray-400 dark:hover:bg-gray-800 cursor-pointer">4</div>
  </div>
</div>
