const { gallery } = Astro.props;
import Img from "../components/Img.astro";
---

<div class="w-full max-w-5xl p-5 pb-10 mx-auto mb-10 gap-5 columns-2 lg:columns-4 space-y-5 md:grid-cols-4 lg:py-16 lg:px-6" >
  {
    gallery.map(({ id_galeri, foto }) => (
      <a href={"/gallery/" + id_galeri} >
        <Img foto={foto} transition:name="gallery" />
      </a>
    ))
  }
</div>
